<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button" style="color:#ff97ff">+ Add new</a>
</div>

<ul class="admin-post">
  <% data.forEach(post => {%>
  <li>
    <a href="/post/<%= post._id %>" style="color:#ff97ff"> <%= post.title %> &nearr; </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= post._id %>" class="btn" style="color:#ff97ff">Edit</a>
      <form action="/delete-post/<%= post._id %>" method="POST">
        <input type="submit" value="Delete" class="btn" style="color:#ff97ff" />
      </form>
    </div>
  </li>

  <% }) %>
</ul>
